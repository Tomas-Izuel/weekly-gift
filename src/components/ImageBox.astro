---
interface props{
    src: string;
}

const {src} = Astro.props
---

<div class=" w-40 h-40">
    <img src={src} alt="">
</div>

<style>
    div{
        position: relative;
        filter: grayscale(100%);
        transition: all 0.5s ease-in-out;
    }
    div:hover{
        filter: grayscale(0%);
        transform: scale(1.3);
        z-index: 100;
    }
    img{
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
</style>